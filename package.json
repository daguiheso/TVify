{
  "name": "tvify",
  "dependencies": {
    "jquery": "^2.2.4",
    "serve": "^1.4.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1"
  },
  "scripts": {
    "public": "md public & cd public & del *.* /F /S /Q",
    "build-js": "browserify -t [ babelify --presets [ es2015 ] ] index.js -o public/app.js",
    "copy-files": "cp index.css public/app.css & cp index.html public/index.html",
    "build": "npm run public & npm run build-js & npm run copy-files ",
    "serve": "serve public"
  }
}
